<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scitech.codegram.ContestInfo">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        tools:context=".Tab2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <EditText
                android:id="@+id/contestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:hint="Contest Name..."
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/allerta"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="Contest Domain"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/spinnerContestDomain"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:text="Total number of Questions"
                android:textAlignment="center" />

            <NumberPicker
                android:id="@+id/numQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allerta"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="Number of Successful Submissions"
                android:textAlignment="center" />

            <NumberPicker
                android:id="@+id/numSubmissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10" />

            <EditText
                android:id="@+id/contestRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Contest Rank"/>

            <com.google.android.material.button.MaterialButton
                android:clickable="true"
                android:id="@+id/contestInfoSubmit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Submit"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</FrameLayout>
